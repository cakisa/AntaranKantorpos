<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="72dp">
    <android.support.percent.PercentRelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView android:id="@+id/akdstatus"
            android:layout_alignTop="@+id/akditem"
            android:layout_alignBottom="@+id/awktlokal"
            android:layout_width="24dp"
            android:layout_height="24dp" />
        <TextView android:id="@+id/akditem"
            android:layout_toEndOf="@+id/akdstatus"
            android:layout_marginStart="20dp"
            android:textSize="24sp"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/awktlokal"
            android:layout_toEndOf="@+id/akdstatus"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_below="@+id/akditem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/aketerangan"
            android:layout_toEndOf="@+id/akdstatus"
            android:layout_marginStart="20dp"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_below="@+id/awktlokal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </android.support.percent.PercentRelativeLayout>

</android.support.design.widget.CoordinatorLayout>