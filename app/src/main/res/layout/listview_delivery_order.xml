<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:paddingStart="@dimen/activity_horizontal_margin"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingTop="8dp"
    android:layout_width="match_parent"
    android:layout_height="72dp">
    <android.support.percent.PercentRelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/ado"
            android:textSize="24sp"
            android:text="64400111666"
            android:textColor="@color/colorPrimaryText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView android:id="@+id/jmlProsesAntar"
            android:text="10 Proses Antar | "
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_below="@+id/ado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/jmlBerhasilAntar"
            android:text="20 Berhasil Antar | "
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_below="@+id/ado"
            android:layout_toEndOf="@id/jmlProsesAntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView android:id="@+id/jmlGagalAntar"
            android:text="20 Gagal Antar"
            android:textSize="14sp"
            android:textColor="@color/colorSecondaryText"
            android:layout_below="@+id/ado"
            android:layout_toEndOf="@id/jmlBerhasilAntar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.percent.PercentRelativeLayout>

</android.support.design.widget.CoordinatorLayout>